use Illuminate\Support\Facades\Auth;

Auth::routes();

Route::get('/', function() {
    if (Auth::check()) {
        $error = session()->get('error');
        Log::info($error);
        return redirect()->route('home')->with('error', $error);
    }
    return redirect()->route('login');
});

Route::get('/home', function () {
    return view('welcome');
})->name('home')->middleware('auth');
